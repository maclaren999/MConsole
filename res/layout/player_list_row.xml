<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mc_dark_backgrouns"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/player_face"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:padding="2dp"
        android:focusable="false"
        android:clickable="false"
        android:src="@drawable/default_face_no_aa" />

    <TextView
        android:id="@+id/player_name_in_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:padding="2dp"
        android:gravity="center_vertical|left"
        android:background="@drawable/holo_background"
        android:textSize="20.0sp" />

    <View
        android:layout_width="2dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="#ff202122" />
    <ImageButton
        android:id="@+id/player_admin"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:scaleType="fitCenter"
        android:background="@color/mc_dark_backgrouns"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:clickable="false"
        android:src="@drawable/action" />
</LinearLayout>